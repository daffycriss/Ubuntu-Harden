# 6

#!/bin/bash

# Command Line Warning Banners

# Remove Message of the Day
echo '==============================================='
echo 'This Script Removes the Message of the Day File'
rm /etc/motd
echo '==============================================='
echo ''

# Configure Local and Remote Login Warning Banner
echo '========================================================='
echo 'This Script Configures the Local and Remote Login Banner.'
echo 'OS Version Will not be Displayed but a Warning Message.'
# Custom Messages can be Configured as Needed
echo "Authorized uses only. All activity may be monitored and reported." > /etc/issue
echo "Authorized uses only. All activity may be monitored and reported." > /etc/issue.net
echo '========================================================='
echo ''
